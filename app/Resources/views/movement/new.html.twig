                <input type="submit" class="btn btn-success" value="إحداث">

            </div>
        </div>


    {{ form_end(form) }}

    {% endblock %}
	
  {% block js %}
  {{ parent() }}
	 <script src="{{asset('assets/vendors/moment/min/moment.min.js')}}"></script>
    <script src="{{asset('assets/vendors/bootstrap-daterangepicker/daterangepicker.js')}}"></script>
	 <!-- jQuery -->
    <script src="{{asset('assets/vendors/jquery/dist/jquery.min.js')}}"></script>
    <!-- Bootstrap -->
    <script src="{{asset('assets/vendors/bootstrap/dist/js/bootstrap.min.js')}}"></script>

    <!-- Custom Theme Scripts -->
    <script src="{{asset('assets/build/js/custom.min.js')}}"></script>

    <!-- bootstrap-daterangepicker -->
    <script src="{{asset('assets/vendors/moment/min/moment.min.js')}}"></script>
    <script src="{{asset('assets/vendors/bootstrap-daterangepicker/daterangepicker.js')}}"></script>

    <script>
      $(document).ready(function(){
        $(".datepicker").daterangepicker({
          locale: {
                format: 'DD/MM/YYYY'
          },
          singleDatePicker: true,
          calender_style: "picker_4",
        });
        changeCreditAccount();
        changeDebitAccount();

        $("#comptebundle_movement_selectCreditAccount").change(changeCreditAccount);
        $("#comptebundle_movement_selectDebitAccount").change(changeDebitAccount);
      });

      function changeCreditAccount(){
       if($("#comptebundle_movement_selectCreditAccount").val()=="1"){
          $("#creditEAccount").hide();
          $("#creditAccount").show();
        }

        if($("#comptebundle_movement_selectCreditAccount").val()=="2"){
          $("#creditAccount").hide();
          $("#creditEAccount").show();
        }
      }


       function changeDebitAccount(){
       if($("#comptebundle_movement_selectDebitAccount").val()=="1"){
          $("#debitEAccount").hide();
          $("#debitAccount").show();
        }

        if($("#comptebundle_movement_selectDebitAccount").val()=="2"){
          $("#debitAccount").hide();
          $("#debitEAccount").show();
        }
      }
    </script>
{% endblock %}

        
