{% extends "compteBundle::layout.html.twig" %}


{% block xTitle %}
    <h2> قائمة التحويلات </h2>
{% endblock %}
{% block content %}
                  
   
   
 <table id="datatable" class="table table-striped table-bordered" dir="rtl">
        <thead>
          <tr>
                 <th>Id</th>
                <th>Amountmv</th>
                <th>Datemv</th>
                <th>Months</th>
                <th>Realdatemv</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movement in movements %}
            <tr>
             
                <td><a href="{{ path('movement_show', { 'id': movement.id }) }}">{{ movement.id }}</a></td>
                <td>{{ movement.amountMv }}</td>
                <td>{% if movement.dateMv %}{{ movement.dateMv|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ movement.months }}</td>
                <td>{% if movement.realDateMv %}{{ movement.realDateMv|date('Y-m-d H:i:s') }}{% endif %}</td>     
                <td>

                           

                            <a class="btn btn-info" href="{{ path('movement_edit', { 'id': movement.id }) }}">تعديل
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                             <a class="btn btn-success" href="{{ path('movement_show', { 'id': movement.id }) }}">تفاصيل   
                             <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
                             </a>

                </td>
                
            </tr>
        {% endfor %}
        </tbody>
    </table>

     </div>
              </div>
    
    
    
            <a class="btn btn-primary pull-right" href="{{ path('movement_new') }}">إضافة تحويل جديد</a>
       
    

{% endblock %}

{% block js %}
{{parent()}}
 
