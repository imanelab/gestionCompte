{% extends "compteBundle::layout.html.twig" %}

{% block pageContent %}
    <h1>Movement</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movement.id }}</td>
            </tr>
            <tr>
                <th>Amountmv</th>
                <td>{{ movement.amountMv }}</td>
            </tr>
            <tr>
                <th>Datemv</th>
                <td>{% if movement.dateMv %}{{ movement.dateMv|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Months</th>
                <td>{{ movement.months }}</td>
            </tr>
            <tr>
                <th>Realdatemv</th>
                <td>{% if movement.realDateMv %}{{ movement.realDateMv|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('movement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('movement_edit', { 'id': movement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
