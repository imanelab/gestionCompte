{% extends 'compteBundle::layout.html.twig' %}

{% block pageContent %}
    <h1>Delegation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ delegation.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ delegation.name }}</td>
            </tr>
            <tr>
                <th>Depth</th>
                <td>{{ delegation.depth }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('delegation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('delegation_edit', { 'id': delegation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
