{% extends "compteBundle::layout.html.twig" %}


{% block xTitle %}
    <h2> قائمة الوحدات </h2>
{% endblock %}
{% block content %}
                  
   
   
 <table id="datatable" class="table table-striped table-bordered" dir="rtl">
        <thead>
            <tr>
              
                <th>إسم الوحدة</th>
               
                <th>العمليات</th>
            </tr>
        </thead>
        <tbody>
        {% for masterEntity in masterEntities %}

            <tr>
                
                <td>{{ masterEntity.name }}</td>
               
			    <td>

                           

                            <a class="btn btn-info" href="{{ path('masterentity_edit', { 'id': masterEntity.id }) }}">تعديل
							<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
							</a>
							 <a class="btn btn-success" href="{{ path('masterentity_show', { 'id': masterEntity.id }) }}">تفاصيل   
							 <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
							 </a>

                </td>
			   
                
            </tr>

                {% for masterEntity1 in masterEntities %}
                    {% if masterEntity1.masterEntity%}
                        {% if masterEntity1.masterEntity.id == masterEntity.id%}
                            <tr>
                             <td></td>
                                <td><a href="{{ path('masterentity_show', { 'id': masterEntity1.id }) }}">{{ masterEntity1.id }}</a></td>
                                <td>{{ masterEntity1.name }}</td>
                                <td>{{ masterEntity1.depth }}</td>
                                <td>
                                    <ul>
                                        <li>
                                            <a href="{{ path('masterentity_show', { 'id': masterEntity1.id }) }}">show</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('masterentity_edit', { 'id': masterEntity1.id }) }}">edit</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endif %}
                    {% endif %}
                {% endfor %}
            {% endif %}
        {% endfor %}
        </tbody>
    </table>

   
            <a class="btn btn-primary pull-right" href="{{ path('masterentity_new') }}">إضافة وحدة جديدة</a>
       

{% endblock %}

