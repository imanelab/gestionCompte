				 <th>الرصيد</th>
				  <th>العمليات</th>
            </tr>
        </thead>
        <tbody>
        {% for line in lines %}
            <tr>

               
				 
                <td>{{ line.title }}</td>
				 <td>{{ line.idl }}</td>
				  <td>{{ line.version }}</td>
                <td>{{ line.amount }}</td>
               
             
                <td>

                           

                            <a class="btn btn-info" href="{{ path('line_edit', { 'id': line.id }) }}">تعديل
							<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
							</a>
							 <a class="btn btn-success" href="{{ path('line_show', { 'id': line.id }) }}">تفاصيل   
							 <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
							 </a>

                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

	 </div>
