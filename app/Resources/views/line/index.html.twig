{% extends "compteBundle::layout.html.twig" %}

{% block xTitle %}
    <h2> السطور</h2>
{% endblock %}
{% block content %}
       
   
   
 <table id="datatable" class="table table-striped table-bordered" dir="rtl">
 <a class="btn btn-primary pull-right" href="{{ path('line_new') }}">إضافة سطر جديد</a>
