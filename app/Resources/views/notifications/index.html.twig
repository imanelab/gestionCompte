{% extends "compteBundle::layout.html.twig" %}


{% block xTitle %}
    <h2> تأكيد التحويلات </h2>
{% endblock %}
{% block content %}
                  
   
   
<table id="datatable" class="table table-striped table-bordered">
                      <thead>
                        <tr>                         
                          <th>العمليات</th>
                          <th>تاريخ التحويل</th>
                          <th>تاريخ إنهاء عملية التحويل</th>
                          <th>عدد الأشهر</th>
                          <th>مبلغ التحويل</th>
                          <th>السطر المحول منه</th>
                        
                        </tr>
                     </thead>


                      <tbody>
                        <tr>
                         
                          
                         
                       <td>

                          
            <div class="form-group">
                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                           
                           <input type="submit" value="رفض التحويل" class="btn btn-danger">
                            <input class="btn btn-success" type= "submit" value="تأكيد التحويل">

                            </div> </div> 
                       </td>
                       
                       <td>{% if movement.realDateMv %}{{ movement.realDateMv|date('Y-m-d H:i:s') }}{% endif %}</td>
                       <td>{{ movement.months }}</td>
                       <td>{% if movement.dateMv %}{{ movement.dateMv|date('Y-m-d H:i:s') }}{% endif %}</td>
                       <td>{{ movement.amountMv }}</td>
                       <td>{{ movement.line.title }}</td>
                    
                       
                        </tr>
            
                        </tbody>
                    </table>

	 </div>
              </div>
	
	
    
            <a class="btn btn-primary pull-right" href="{{ path('paragraph_new') }}">إضافة فقرة جديدة</a>
       
	

{% endblock %}

