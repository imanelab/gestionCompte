{% extends "compteBundle::layout.html.twig" %}

{% block xTitle %}
    <h2> ترميز بريد بنك </h2>
{% endblock %}
{% block content %}
                  
   
   
 <table id="datatable" class="table table-striped table-bordered" dir="rtl">
        <thead>
            <tr>
                
                <th>الرمز</th>
                <th>تسمية</th>
                <th>العمليات</th>
            </tr>
        </thead>
        <tbody>
        {% for codificationABB in codificationABBs %}
            <tr>
               
                <td>{{ codificationABB.code }}</td>
                <td>{{ codificationABB.label }}</td>
				
				
				 <td>

                           

                            <a class="btn btn-info" href="{{ path('codificationabb_edit', { 'id': codificationABB.id }) }}">تعديل
							<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
							</a>
							 <a class="btn btn-success" href="{{ path('codificationabb_show', { 'id': codificationABB.id }) }}">تفاصيل   
							 <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
							 </a>

                </td>
				
				
                
            </tr>
        {% endfor %}
        </tbody>
    </table>

	 <a class="btn btn-primary pull-right" href="{{ path('codificationabb_new') }}">إضافة ترميز جديد
	 <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
	 </a>
   
{% endblock %}

