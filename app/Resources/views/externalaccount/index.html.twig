{% extends "compteBundle::layout.html.twig" %}


{% block xTitle %}
    <h2> بيانات الشركاء</h2>
{% endblock %}
{% block content %}
     <table id="datatable" class="table table-striped table-bordered" dir="rtl">
        <thead>
            <tr>
                
                <th>إسم الشريك</th>
                <th>نوع الشريك</th>
                <th>العملبات</th>
            </tr>
        </thead>
        <tbody>
        {% for externalAccount in externalAccounts %}
            <tr>
                
                <td>{{ externalAccount.name }}</td>
                <td>{{ externalAccount.type }}</td>
                <td>

                <a class="btn btn-info" href="{{ path('externalaccount_show', { 'id': externalAccount.id }) }}">تعديل
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                             <a class="btn btn-success" href="{{ path('externalaccount_edit', { 'id': externalAccount.id }) }}">تفاصيل   
                             <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
                             </a>
                      
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
            <a class="btn btn-primary pull-right" href="{{ path('externalaccount_new') }}"> إضافة شريك جديد
			<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
			</a>
        
{% endblock %}
