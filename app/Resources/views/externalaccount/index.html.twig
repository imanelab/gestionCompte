{% extends "compteBundle::layout.html.twig" %}


{% block xTitle %}
    <h2> Externalaccounts list</h2>
{% endblock %}
{% block content %}
     <table id="datatable" class="table table-striped table-bordered" dir="rtl">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for externalAccount in externalAccounts %}
            <tr>
                <td><a href="{{ path('externalaccount_show', { 'id': externalAccount.id }) }}">{{ externalAccount.id }}</a></td>
                <td>{{ externalAccount.name }}</td>
                <td>{{ externalAccount.type }}</td>
                <td>

                <a class="btn btn-info" href="{{ path('externalaccount_show', { 'id': externalAccount.id }) }}">تعديل
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                             <a class="btn btn-success" href="{{ path('externalaccount_edit', { 'id': externalAccount.id }) }}">تفاصيل   
                             <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
                             </a>
                      
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('externalaccount_new') }}">Create a new externalAccount</a>
        </li>
    </ul>
{% endblock %}
{% block js %}
{{parent()}}
 
 <!-- Datatables -->
    <script src="{{asset('assets/vendors/datatables.net/js/jquery.dataTables.min.js')}}"></script>
    <script src="{{asset('assets/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js')}}"></script>

    <!-- Custom Theme Scripts -->
    <script src="{{asset('assets/vendors/build/js/custom.min.js')}}"></script>
    <!-- Datatables -->
    <script>
      $(document).ready(function() {

        $('#datatable').dataTable();


      });
    </script>
    <!-- /Datatables -->

{% endblock %}
