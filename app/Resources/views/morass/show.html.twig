{% extends "compteBundle::layout.html.twig" %}

{% block pageContent %}
    <h1>Morass</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ morass.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ morass.name }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ morass.year }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('morass_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('morass_edit', { 'id': morass.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
