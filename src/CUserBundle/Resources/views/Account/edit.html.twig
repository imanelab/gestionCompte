{% extends "CUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}
    {{parent()}} - Gestion des comptes
{% endblock %}

{% block content %}
    {% for key, messages in app.session.flashbag.all() %}
    {% for message in messages %}
        <div class="alert alert-success">
          {{ message|trans({}, 'FOSUserBundle') }}
        </div>
    {% endfor %}
  {% endfor %}
    <div class="span12">
        {% block xTitle %}
                    
            <h1>Gestion des comptes</h1>
 
        {% endblock %}

        {% block pageContent %}
                <div class="block span6">
                 <div class="table-resonsive">
                    {{ form_start(form) }}
                    <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th>{{ form_label(form.firstName) }} </th>
                            <td>
                            {{ form_widget(form.firstName) }}    
                            </td>
                        </tr>
                        <tr>
                            <th>{{ form_label(form.lastName) }}</th>
                            <td>{{ form_widget(form.lastName) }}</td>
                        </tr>
                        <tr>
                            <th>{{ form_label(form.username) }}</th>
                            <td>{{ form_widget(form.username) }}</td>
                        </tr>
                        <tr>
                            <th>{{ form_label(form.email) }}</th>
                            <td>{{ form_widget(form.email) }}</td>
                        </tr>

                        <tr>
                            <td><a class="btn btn-inverse" href="{{ path('users') }}">
                                <i class="icon-chevron-left icon-white"></i>
                                Retour Ã  la liste
                            </a></td>
                            <td><button class="btn btn-primary pull-right" >{{ 'profile.edit.submit'|trans }}<i class="icon-ok icon-white"></i></button></td>
                        </tr>
                    </tbody>
                </table>
                {{ form_end(form) }}
        </div>
        {% endblock %}
        </div>
    </div>
{% endblock %}
