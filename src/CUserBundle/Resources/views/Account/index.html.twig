{% extends "compteBundle::layout.html.twig" %}


{% block xTitle %}
                    
            <h2>Gestion des comptes</h2>
 
        {% endblock %}
     
            {% block content %}
			
			 <div class="span12">
        
            {% for key, messages in app.session.flashbag.all() %}
    {% for message in messages %}
        <div class="alert alert-success">
          {{ message|trans({}, 'FOSUserBundle') }}
        </div>
    {% endfor %}
  {% endfor %}
    </div>

            <table id="datatable" class="table table-striped table-bordered" >
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Identifiant</th>
                        <th>Roles</th>
                        <th>Statut</th>
                        <th>Affectation des rôles</th>
						<th>Actions</th>
                    </tr>
                </thead>
                            <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td>{{ entity.firstName }}</td>
                                    <td>{{ entity.lastName }}</td>
                                    <td>{{ entity.username }}</td>
                                    <td>{% for role in entity.roles %} 
                                            {{ role[5:]|capitalize }} <br>
                                        {% endfor %}										
										
                                    </td>
                                    <td>{% if entity.enabled %}
                                        Actif
                                        {% else %}
                                        Inactif
                                    {% endif %}
									{{ form_start(forms[entity.id])}}
									                                    
                                        {{ form_label(forms[entity.id].status)}}
                                        {{ form_widget(forms[entity.id].status)}}
                                        
                                    </td>
                                    <td>
                                        
                                        {{ form_widget(forms[entity.id].roles)}}
                                        {{ form_label(forms[entity.id].adminRole)}}
                                        {{ form_widget(forms[entity.id].adminRole)}}
                                        {{ form_label(forms[entity.id].status)}}
                                        {{ form_widget(forms[entity.id].status)}}
                                        {{ form_end(forms[entity.id])}}
									</td>
								    <td>
                                          <a class="btn btn-success" href="{{ path('users_show', {'username': entity.username }) }}">
                                            <i class="icon-eye-open"></i> Afficher 
                                        </a>
                                        <a class="btn btn-primary" href="{{ path('users_edit', { 'id':entity.id,'username': entity.username }) }}">
                                            <i class="icon-pencil icon-white"></i> Editer
                                        </a>
                                            
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    
                </div>
				  
        </div>
            {% endblock %}
          
           {% block script %}
{{parent()}}
 
 <!-- Datatables -->
    <script src="{{asset('assets/vendors/datatables.net/js/jquery.dataTables.min.js')}}"></script>
    <script src="{{asset('assets/vendors/datatables.net-bs/js/dataTables.bootstrap.min.js')}}"></script>

    <!-- Custom Theme Scripts -->
    <script src="{{asset('assets/vendors/build/js/custom.min.js')}}"></script>
    <!-- Datatables -->
    <script>
      $(document).ready(function() {

        $('#datatable').dataTable({
		language:{
				 "sProcessing":   "جارٍ التحميل...",
			"sLengthMenu":   "أظهر _MENU_ مدخلات",
			"sZeroRecords":  "لم يعثر على أية سجلات",
			"sInfo":         "إظهار _START_ إلى _END_ من أصل _TOTAL_ مدخل",
			"sInfoEmpty":    "يعرض 0 إلى 0 من أصل 0 سجل",
			"sInfoFiltered": "(منتقاة من مجموع _MAX_ مُدخل)",
			"sInfoPostFix":  "",
			"sSearch":       "ابحث:",
			"sUrl":          "",
			"oPaginate": {
				"sFirst":    "الأول",
				"sPrevious": "السابق",
				"sNext":     "التالي",
				"sLast":     "الأخير"
    }
		
		}
		});


      });
    </script>
    <!-- /Datatables -->

{% endblock %}
