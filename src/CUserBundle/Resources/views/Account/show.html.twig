{% extends "compteBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block title %}
    {{parent()}} - Gestion des comptes
{% endblock %}
{% block content %}
    {% for key, messages in app.session.flashbag.all() %}
    {% for message in messages %}
        <div class="alert alert-success">
          {{ message|trans({}, 'FOSUserBundle') }}
        </div>
    {% endfor %}
  {% endfor %}
{% block xcontent %}
 
					<table id="datatable" class="table table-striped table-bordered" dir="rtl">
                     <thead>
                        <tr>
                            			 
                            
							
							
							<th>الإسم العائلي</th>
							<th>الإسم الشخصي</th>
							 <th>{{ 'profile.show.username'|trans }}</th>
							 <th>كلمة المرور</th>
							 <th>{{ 'profile.show.email'|trans }}</th>
							 <th>العمليات</th>
							 
                        </tr>
                     </thead>
                             <tbody>
							 
						 <tr>
						
                            <td>{{ user.lastName }}</td>
                            <td> {{ user.firstname }}</td>
                            <td> {{ user.username }}</td>
                         <td><a class="href" href="{{ path('fos_user_change_password') }}">
                                <i class="icon-edit"></i>
                                Changer
                            </a></td>
                            <td>{{ user.email }}</td>
                       
                            
                            
                        
                           
                            <td><a class="btn btn-info pull-right" href="{{ path('users_edit',{'username':user.username}) }}">
                                <i class="icon-edit icon-white"></i>
                                تعديل
                            </a></td>
                        </tr>
                    </tbody>
                </table>
			<a class="btn btn-primary pull-right" href="{{ path('users') }}">العودة إلى اللائحة</a>
   {% endblock %}     
 {% endblock %}